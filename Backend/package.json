{
  "name": "vendly-checkout-backend",
  "version": "2.0.0",
  "description": "Backend API para el sistema de checkout de Vendly con SQL directo",
  "private": true,
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run verify:production",
    "test": "node scripts/test_crud.js",
    "test:analytics": "node scripts/test_analytics_endpoints.js",
    "verify:production": "node scripts/verify_production.js",
    "db:setup": "node scripts/setup_database.js",
    "db:check": "node scripts/setup_database.js --check",
    "db:test": "node scripts/check-connection.js",
    "db:diagnose": "node scripts/diagnose-db-connection.js",
    "db:migrate": "node scripts/run_migration.js",
    "db:seed": "node scripts/seed_realistic_products.js",
    "db:clean": "node scripts/clean_database.js",
    "db:clean-data": "node scripts/clean_database.js --data",
    "db:clean-tables": "node scripts/clean_database.js --tables",
    "db:clean-all": "node scripts/clean_database.js --all",
    "utils:stats": "node scripts/utils.js stats",
    "utils:recent": "node scripts/utils.js recent",
    "utils:categories": "node scripts/utils.js categories",
    "utils:health": "node scripts/utils.js health"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.75.0",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bwip-js": "^4.7.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "~1.9.1",
    "pg": "^8.16.3",
    "pg-format": "^1.0.4",
    "qrcode": "^1.5.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^24.5.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
